num = []
size = int(input("Enter size of list: "))
for i in range(size):
    Temp = int(input(f"Enter the element at {i} position: "))
    num.append(Temp)

print(f"Given list: {num}")
print("Maximum element:", max(num))
print("Minimum element:", min(num))
print("Summation of elements:", sum(num))
print("Sorted list:", sorted(num))
#to print descending order use reverse
